<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    tools:ignore="NestedWeights"

    android:id="@+id/main_LLO_screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#202124">

    <LinearLayout
        android:id="@+id/main_LLO_topbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal" >
        <LinearLayout
            android:id="@+id/main_LLO_healthbar"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="start"
            android:orientation="horizontal" />
        <TextView
            android:id="@+id/main_TXT_score"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:gravity="end"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:textColor="#4499ff"
            android:autoSizeTextType="uniform"
            android:paddingEnd="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/main_LLO_grid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:orientation="vertical"
        android:background="@drawable/grid_cell_background"
        android:padding="2dp" >
    </LinearLayout>

    <GridLayout
        android:id="@+id/main_LLO_controls"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:columnCount="3"
        android:rowCount="3"
        android:paddingHorizontal="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="8dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonUp"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_column="1"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:text="UP" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonDown"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_column="1"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:text="DOWN" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonLeft"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="0"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:text="LEFT" />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonRight"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="2"
            android:backgroundTint="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:text="RIGHT" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonQuit"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_column="1"
            android:backgroundTint="#ffffff"
            android:textColor="#4499ff"
            android:insetTop="0dp"
            android:insetBottom="0dp"
            android:textStyle="bold"
            android:fontFamily="sans-serif-black"
            android:autoSizeTextType="uniform"
            android:visibility="invisible"
            android:text="QUIT GAME" />

    </GridLayout>

</LinearLayout>